{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@thirdplace/shared/*": ["../shared/src/*"],
      "@backend/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
